@model List<CustomerModel>
@{
    // Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Customer";
    int count = 0;
}
<h4>Customer</h4>
<a href="/Customer/Create" class="btn btn-outline-success">New</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">CustomerId</th>
            <th scope="col">CustomerName</th>
            <th scope="col">PhoneNo</th>
            <th scope="col">Gender</th>
            <th scope="col">DateOfBirth</th>
        </tr>
    </thead>
    <tbody>
        @foreach (CustomerModel item in Model)
        {
            <tr>
                 <td>
                    <a href="/Customer/Edit/@item.CustomerId" class="btn btn-warning">Edit</a>
                    <a href="/Customer/Delete/@item.CustomerId" class="btn btn-danger btn-delete">Delete</a>
                </td> 
                <th scope="row">@(++count)</th>
                <td>@item.CustomerName</td>
                <td>@item.PhoneNo</td>
                <td>@item.Gender</td>
                <td>@item.DateOfBirth</td>
            </tr>
        }
    </tbody>
</table>
